# ========================================
# THE ROYAL BARBER APP - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your actual values
# cp env.example .env

# ========================================
# API CONFIGURATION
# ========================================
# Production API URL (update with your actual domain)
EXPO_PUBLIC_API_URL=https://api.theroyalbarber.com

# Development API URL (for local development)
# EXPO_PUBLIC_API_URL=http://localhost:8080

# ========================================
# STRIPE CONFIGURATION
# ========================================
# Stripe publishable key (get from Stripe Dashboard)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ========================================
# APP CONFIGURATION
# ========================================
# App name and version
EXPO_PUBLIC_APP_NAME=The Royal Barber
EXPO_PUBLIC_APP_VERSION=1.0.0

# ========================================
# FEATURE FLAGS
# ========================================
# Enable/disable features
EXPO_PUBLIC_ENABLE_SMS_AUTH=true
EXPO_PUBLIC_ENABLE_PAYMENTS=true
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true

# ========================================
# DEBUG CONFIGURATION
# ========================================
# Enable debug mode (should be false in production)
EXPO_PUBLIC_DEBUG_MODE=false

# ========================================
# ANALYTICS (OPTIONAL)
# ========================================
# Analytics configuration (if using analytics services)
# EXPO_PUBLIC_ANALYTICS_ID=your_analytics_id

# ========================================
# PRODUCTION CHECKLIST
# ========================================
# Before deploying to production, ensure:
# 1. EXPO_PUBLIC_API_URL points to production API
# 2. EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY is live key (not test)
# 3. EXPO_PUBLIC_DEBUG_MODE=false
# 4. All feature flags are set appropriately
# 5. App version is updated if needed 